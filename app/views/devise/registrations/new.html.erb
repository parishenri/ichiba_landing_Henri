<div class="container">
  <div class="container-top-form">
  </div>
    <%= image_tag "step1.png", class: "stepbar" %>
  <div class="form">

      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :first_name,
                      required: true, label: false, placeholder: t("first_name"), input_html: { class: "input-form" } %>
          <%= f.input :last_name,
                      required: true, label: false, placeholder: t("last_name"), input_html: { class: "input-form" } %>
          <%= f.input :phone_number,
                      required: false, label: false, placeholder: t("phone_number"), input_html: { class: "input-form" } %>
          <%= f.input :email,
                      required: true,
                      autofocus: true,
                      input_html: { autocomplete: "email" }, label: false, placeholder: t("email"), input_html: { class: "input-form" }%>
          <%= f.input :password,
                      required: true,
                      hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: t("password"), input_html: { class: "input-form" } %>
          <%= f.input :password_confirmation,
                      required: true,
                      input_html: { autocomplete: "new-password" }, label: false, placeholder: t("password_confirmation"), input_html: { class: "input-form" } %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t("next"), class: "btn-check m-auto" %>
        </div>
      <% end %>
    </div>
</div>
